<p id="notice"><%= notice %></p>
<h1 style='text-align: center'>Gmail de wish</h1>
<div class='container' style='mg-5'>
  <div class="form">
    <%= form_tag(emails_path, method: :post, class: "form", remote: true) do %>
      <%= submit_tag 'create', :name => 'commit'%>
    <% end %>
  </div>
</div>
<div class='container'>
  <div class='row'>
    <div class='col-md-4'>
      <h2>Liste de emails</h2>
      <ul id='email-list'>
        <% @emails.each do |email| %>
          <% if email.read == true %>
            <li style='background-color: green' id='email_<%= email.id %>'><%= link_to email.object, email_path(email), remote: true %>
            <%else%>
              <li id='email_<%= email.id %>'><%= link_to email.object, email_path(email), remote: true %>
              <% end %>
              <hr>
            </li>
          <% end %>
        </ul>
      </div>
      <div class='col-md-8'>
        <h2>Emails sélectionnés</h2>
        <ul id='email-show'>
        </ul>
      </div>
    </div>
  </div>
  <br>
  <%= link_to 'New Email', new_email_path %>
